<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/close_view"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/post_close_click_hl"
        />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/photo_view"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/default_user_avatar"
        />

    <TextView
        android:id="@+id/tick_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/photo_view"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:textColor="#333333"
        android:textSize="23sp"
        />

    <ImageView
        android:id="@+id/qrcode_view"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_below="@id/tick_view"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="10dp"
        android:background="@color/black"/>

    <TextView
        android:text="扫码关注我的课程"
        android:id="@+id/tick_more"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/qrcode_view"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp"
        android:textColor="@color/grey_600"
        android:textSize="28sp"
        android:layout_marginBottom="20dp"
        />

</RelativeLayout>