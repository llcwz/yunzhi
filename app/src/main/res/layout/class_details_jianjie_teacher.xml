<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/black_alpha_16">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/len_8"
        android:layout_marginLeft="@dimen/len_8"
        android:layout_marginRight="@dimen/len_8"
        android:layout_marginBottom="@dimen/len_8"
        android:background="@color/white_alpha_112">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_details_title"
            android:gravity="center_vertical"
            android:text="老师简介"
            android:textSize="@dimen/font_20"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintHorizontal_bias="0.0" />


        <TextView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/tv_jianjie_teacher"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_details_title"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginStart="8dp" />
        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/iv_course_show1"
            android:background="@color/blue_300"
            android:src="@mipmap/course1"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_jianjie_teacher"
            android:layout_marginStart="8dp" />

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/iv_course_show2"
            android:background="@color/blue_300"
            android:src="@mipmap/course1"
            app:layout_constraintLeft_toRightOf="@+id/iv_course_show1"
            android:layout_marginLeft="32dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_jianjie_teacher"
            android:layout_marginStart="32dp" />

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/iv_course_show3"
            android:background="@color/blue_300"
            android:src="@mipmap/course1"
            app:layout_constraintLeft_toRightOf="@+id/iv_course_show2"
            android:layout_marginLeft="32dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_jianjie_teacher"
            android:layout_marginStart="32dp" />

        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:id="@+id/tv_course_show1"
            android:textSize="@dimen/font_10"
            android:text="正月十五闹元宵"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/iv_course_show1"
            android:layout_marginStart="8dp" />

        <TextView
            android:id="@+id/tv_course_show2"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"

            android:textSize="@dimen/font_10"
            android:text="正月十五闹元宵"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/iv_course_show2"
            app:layout_constraintLeft_toRightOf="@+id/tv_course_show1"
            android:layout_marginLeft="32dp"
            android:layout_marginStart="32dp" />

        <TextView
            android:id="@+id/tv_course_show3"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="正月十五闹元宵"
            android:textSize="@dimen/font_10"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/iv_course_show3"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp"
            app:layout_constraintVertical_bias="0.0"
            app:layout_constraintLeft_toRightOf="@+id/tv_course_show2"
            android:layout_marginLeft="32dp"
            android:layout_marginStart="32dp" />


    </android.support.constraint.ConstraintLayout>



</LinearLayout>