<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@drawable/ability_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <FrameLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/len_48">
        <ImageView
            android:id="@+id/iv_ability_back"
            android:layout_gravity="center_vertical"
            android:background="@drawable/ic_arrow_back_white_36dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_ability_title"
            android:text="每日学习时长"
            android:gravity="center"
            android:textSize="@dimen/font_16"
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:layout_width="@dimen/len_156"
            android:layout_height="match_parent" />
    </FrameLayout>
    <android.support.v4.view.ViewPager
        android:id="@+id/ability_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </android.support.v4.view.ViewPager>
</LinearLayout>