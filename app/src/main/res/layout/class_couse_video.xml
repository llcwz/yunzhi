<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/layout_video"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:id="@+id/iv_course_details_video" />

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.makeramen.roundedimageview.RoundedImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:scaleType="fitCenter"
            android:id="@+id/rImagV_back"
            android:src="@drawable/ic_arrow_back_40dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="@dimen/len_8"
            android:layout_marginLeft="@dimen/len_8"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginStart="@dimen/len_8" />

        <com.makeramen.roundedimageview.RoundedImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:scaleType="fitCenter"
            android:id="@+id/rImagV_share"
            android:src="@drawable/ic_share_black_40dp"
            android:layout_marginRight="@dimen/len_8"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="@dimen/len_8"
            android:layout_marginEnd="@dimen/len_8" />

        <com.makeramen.roundedimageview.RoundedImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/rImagV_play"
            android:src="@drawable/ic_slow_play_video_black_60dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_big_title"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginRight="0dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintBottom_toBottomOf="@+id/tv_small_title"
            android:layout_marginBottom="17dp"
            android:textColor="@color/black"
            android:maxLines="1"
            android:textSize="@dimen/font_20"
            android:text="计算机组成原理" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_small_title"
            android:layout_marginRight="0dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_big_title"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="0dp"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp"
            app:layout_constraintVertical_bias="1.0"
            android:textColor="@color/black"
            android:textSize="@dimen/font_14"
            android:maxLines="1"
            android:text="张三老师" />

        <TextView
            android:id="@+id/tv_upCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/white"
            android:text="1379"
            android:layout_marginRight="16dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="16dp" />

        <ImageButton
            android:id="@+id/img_like"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/iv_like_unselect"
            app:layout_constraintRight_toLeftOf="@+id/tv_upCount"
            android:layout_marginRight="4dp"
            app:layout_constraintLeft_toRightOf="@+id/tv_small_title"
            android:layout_marginLeft="8dp"
            app:layout_constraintHorizontal_bias="0.991"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp" />


    </android.support.constraint.ConstraintLayout>

</FrameLayout>