<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/fragment_layout_file_head"
        android:layout_width="match_parent"
        android:layout_height="@dimen/len_116">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/iv_course_details_video"
            android:background="@mipmap/aa"/>

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.makeramen.roundedimageview.RoundedImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:scaleType="fitCenter"
                android:id="@+id/rImagV_back"
                android:src="@drawable/ic_arrow_back_40dp"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="@dimen/len_8"
                android:layout_marginLeft="@dimen/len_8"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginStart="@dimen/len_8" />

            <com.makeramen.roundedimageview.RoundedImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:scaleType="fitCenter"
                android:id="@+id/rImagV_share"
                android:src="@drawable/ic_share_black_40dp"
                android:layout_marginRight="@dimen/len_8"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="@dimen/len_8"
                android:layout_marginEnd="@dimen/len_8" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/tv_big_title"
                android:layout_marginLeft="16dp"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginRight="0dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintBottom_toBottomOf="@+id/tv_small_title"
                android:layout_marginBottom="17dp"
                android:textColor="@color/black"
                android:maxLines="1"
                android:textSize="@dimen/font_20"
                android:text="计算机组成原理" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/tv_small_title"
                android:layout_marginRight="0dp"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginLeft="16dp"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/tv_big_title"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="8dp"
                app:layout_constraintVertical_bias="1.0"
                android:textColor="@color/black"
                android:textSize="@dimen/font_14"
                android:maxLines="1"
                android:text="张三老师" />


        </android.support.constraint.ConstraintLayout>

    </FrameLayout>

    <com.flyco.tablayout.CommonTabLayout
        android:id="@+id/sliding_tab_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/len_60"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="@dimen/len_2"
        app:tl_textSelectColor="@color/amber_200"
        app:tl_textUnselectColor="@color/light_gray"
        android:background="@color/transparence"
        app:tl_indicator_corner_radius="@dimen/len_6"
        app:tl_indicator_height="0dp"
        app:tl_divider_color="@color/blue_800"
        app:tl_textBold="BOTH">

    </com.flyco.tablayout.CommonTabLayout>

    <FrameLayout
        android:id="@+id/framelayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>