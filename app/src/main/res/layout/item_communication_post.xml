<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginTop="@dimen/len_4"
              android:layout_marginBottom="@dimen/len_4"
              android:padding="@dimen/len_8">

    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/len_8"
        app:cardElevation="@dimen/len_8"
        android:elevation="@dimen/len_16">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/len_64">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/ci_post_icon"
                    android:layout_width="@dimen/len_48"
                    android:layout_height="@dimen/len_48"
                    android:layout_margin="@dimen/len_8"
                    tools:background="@color/amber_100"
                    android:layout_alignParentLeft="true"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_toRightOf="@+id/ci_post_icon"
                    android:layout_centerVertical="true">

                    <TextView
                        android:id="@+id/tv_post_author"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="WUST第一吃货王"
                        android:textSize="@dimen/font_16"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/tv_post_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2018.3.9 10:21"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:layout_margin="@dimen/len_8">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginTop="@dimen/len_4"
                        android:layout_marginRight="@dimen/len_8">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="赞"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="评论"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:layout_width="0dp"
                        android:orientation="vertical"
                        android:layout_marginTop="@dimen/len_4"
                        android:gravity="center_horizontal">

                        <TextView
                            android:id="@+id/tv_post_like"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:text="218000"/>

                        <TextView
                            android:id="@+id/tv_post_comment"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:text="2018"/>

                    </LinearLayout>

                </LinearLayout>

            </RelativeLayout>

            <View
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:background="@color/black_alpha_64"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/len_8">

                <TextView
                    android:id="@+id/tv_post_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/font_20"
                    android:textStyle="bold"
                    tools:text="武科大鱼节"/>

                <TextView
                    android:id="@+id/tv_post_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/len_8"
                    android:ellipsize="end"
                    android:lines="2"
                    android:maxLines="2"
                    android:textSize="@dimen/font_16"
                    android:textStyle="bold"
                    tools:text="哈哈哈，大家快来吃鱼啊。你看，有红烧的、清蒸的、油炸的……全是和新鲜出炉的耶。中午，南苑食堂门前摆上了"/>
            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>


</LinearLayout>