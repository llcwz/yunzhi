<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginTop="@dimen/len_16"
              android:layout_marginBottom="@dimen/len_16"
    android:padding="@dimen/len_8"
    android:background="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/len_64">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/ci_communication_icon"
            android:layout_width="@dimen/len_48"
            android:layout_height="@dimen/len_48"
            android:layout_margin="@dimen/len_8"
            tools:background="@color/amber_100"
            android:layout_alignParentLeft="true"/>

        <TextView
            android:id="@+id/tv_communication_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_margin="@dimen/len_8"
            android:text="2018.3.9 10:21"/>
    </RelativeLayout>
    <View
        android:layout_width="wrap_content"
        android:layout_height="@dimen/len_1"
        android:background="@color/black_alpha_64"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/len_8">
        <TextView
            android:id="@+id/tv_communication_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="武科大鱼节"
            android:textSize="@dimen/font_20"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/tv_communication_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/len_8"
            tools:text="哈哈哈，大家快来吃鱼啊。你看，有红烧的、清蒸的、油炸的……全是和新鲜出炉的耶。中午，南苑食堂门前摆上了"
            android:textSize="@dimen/font_16"
            android:maxLines="2"
            android:ellipsize="end"
            android:lines="2"
            android:textStyle="bold"/>
    </LinearLayout>

</LinearLayout>