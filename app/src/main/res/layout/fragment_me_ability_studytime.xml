<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
  <LinearLayout
      android:orientation="vertical"
      android:layout_width="match_parent"
      android:layout_height="0dp"
      android:layout_weight="1.1">
      <TextView
          android:textColor="@color/white"
          android:layout_marginLeft="@dimen/len_10"
          android:text="最近一周学习趋势"
          android:gravity="center_vertical"
          android:layout_width="match_parent"
          android:layout_height="@dimen/len_32" />
      <lecho.lib.hellocharts.view.LineChartView
          android:layout_marginLeft="@dimen/len_16"
          android:id="@+id/chart_ability_study"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
         />
  </LinearLayout>

  <android.support.v7.widget.CardView
      android:layout_marginTop="@dimen/len_20"
      android:layout_marginLeft="@dimen/len_28"
      android:layout_marginRight="@dimen/len_172"
      android:layout_weight="0.4"
      app:cardCornerRadius="@dimen/len_10"
      app:cardBackgroundColor="@color/pink_300"
      app:cardElevation="@dimen/len_8"
      android:layout_width="match_parent"
      android:layout_height="0dp">
      <TextView
          android:gravity="center|left"
          android:text="    平均学习时间：2h"
          android:textColor="@color/white"
          android:textSize="@dimen/font_16"
          android:id="@+id/tv_ability_answer"
          android:layout_width="match_parent"
          android:layout_height="match_parent" />
  </android.support.v7.widget.CardView>
  <android.support.v7.widget.CardView
        android:layout_marginTop="@dimen/len_20"
        android:layout_marginLeft="@dimen/len_28"
        android:layout_marginRight="@dimen/len_100"
        android:layout_weight="0.4"
        app:cardCornerRadius="@dimen/len_10"
        app:cardBackgroundColor="@color/teal_a400"
        app:cardElevation="@dimen/len_8"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <TextView
            android:gravity="center|left"
            android:text="    最近偏爱经济管理"
            android:textColor="@color/white"
            android:textSize="@dimen/font_16"
            android:id="@+id/tv_ability_answer2"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
  </android.support.v7.widget.CardView>
  <FrameLayout
      android:layout_width="match_parent"
      android:layout_weight="1"
      android:layout_height="0dp">
  </FrameLayout>

</LinearLayout>