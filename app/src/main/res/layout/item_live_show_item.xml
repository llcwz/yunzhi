<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
         android:id="@+id/linear_layout"
         android:layout_width="match_parent"
         android:layout_height="match_parent"
         android:background="@drawable/item_style"
         android:orientation="vertical"
         android:padding="@dimen/len_4">

         <ImageView
             android:id="@+id/iv_live_show"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:background="@mipmap/tiger" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/len_8">

            <TextView
                android:id="@+id/tv_Cname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/len_10"
                android:text="计算机组成原理"
                android:textSize="@dimen/font_14" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_show_Tname"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/len_40"
                    android:gravity="center"
                    android:text="张三老师"
                    android:textSize="@dimen/font_14" />


                <ImageButton
                    android:id="@+id/ImgBtn_show"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/len_16"
                    android:layout_marginRight="8dp"
                    android:layout_marginTop="8dp"
                    android:background="@color/white_alpha_16"
                    android:src="@drawable/show_person_num" />

                <TextView
                    android:id="@+id/tv_lineCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="12306"
                    android:textColor="@color/red_700" />


            </LinearLayout>

        </LinearLayout>


    </LinearLayout>

</LinearLayout>