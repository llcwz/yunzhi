<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.union.yunzhi.yunzhi">

    <uses-permission android:name="android.permission.INTERNET"/>
    //读取内存权限
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    //扫码相关的权限
    <uses-permission android:name="android.permission.CAMERA"/>
    <uses-permission android:name="android.permission.FLASHLIGHT"/>

    <application
        android:name=".application.MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".activities.LoginActivity"/>
        <activity android:name=".activities.me.ChangePasswordActivity">
        </activity>
        <activity android:name=".activities.me.MyCourseActivity">
        </activity>
        <activity android:name=".activities.me.MyMessageActivity">
        </activity>
        <activity android:name=".activities.me.MyWorkActivity">
        </activity>
        <activity android:name=".activities.classfication.ClassCourseDetails"/>
        <activity android:name=".activities.classfication.ClassCourseFile"/>
        <activity android:name=".zxing.app.PreferencesActivity"/>
        <activity android:name=".zxing.app.CaptureActivity"/>
        <activity android:name=".activities.me.SearchGradeActivity">
        </activity>
        <activity android:name=".activities.me.NewWorkActivity">
        </activity>
        <activity android:name=".activities.communication.PostDetailsActivity">
        </activity>
        <activity android:name=".activities.communication.AddPostActivity">
        </activity>
    </application>

</manifest>